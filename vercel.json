{
  "version": 2,
  "builds": [
    {
      "src": "src",
      "use": "@vercel/vite"
    },
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/index.js" 
    },
    {
      "src": "/(.*)",
      "dest": "src/$1"
    }
  ]
}