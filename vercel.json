{
  "version": 2,
  "builds": [
    {
      "src": "src",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm run build", 
        "outputDirectory": "dist"         
      }
    },
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server/index.js" },
    { "src": "/(.*)", "dest": "/dist/$1" },
    { "src": "/", "dest": "/dist/index.html" }
  ]
}