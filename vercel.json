{
    "version": 2,
    "builds": [
      {
        "src": "src",
        "use": "@vercel/next"
      },
      {
        "src": "server/index.ts", // Ou o arquivo principal do seu backend
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "server/index.ts" // Roteia todas as chamadas para /api para o seu backend
      },
      {
        "src": "/(.*)",
        "dest": "src/$1" // Roteia todas as outras chamadas para o seu frontend
      }
    ]
  }